<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sportstelling.email.dao.EmailDAO">
	<!-- 임시 비밀번호 변경 -->
	<update id="updateUserPassword">
		UPDATE
			`user`
		SET
			`password` = #{password }
		WEHRE
			`loginId` = #{loginId }
			AND `email` = #{email }
	</update>
</mapper>