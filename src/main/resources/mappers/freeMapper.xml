<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sportstelling.freepost.dao.FreeDAO">
	<!-- 게시물 작성 -->
	<insert id="insertFreepost">
		INSERT INTO `notice_board`
		(
			`type`
			, `userId`
			, `userNickName`
			, `subject`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		) VALUES (
			'free'
			, #{userId }
			, #{userNickName }
			, #{subject }
			, #{imagePath }
			, #{content }
			, now()
			, now()
		)
	</insert>
	<!-- 게시물 리스트 -->
	<select id="selectFreepostList" resultType="com.sportstelling.freepost.model.Free">
		SELECT
			`id`
			, `type`
			, `userId`
			, `userNickName`
			, `subject`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`notice_board`
		WHERE
			`type` = 'free'
		ORDER BY `id` DESC
	</select>
	<!-- 게시물 상세 -->
	<select id="selectFreepostByFreeId" resultType="com.sportstelling.freepost.model.Free">
		SELECT
			`id`
			, `type`
			, `userId`
			, `userNickName`
			, `subject`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`notice_board`
		WHERE
			`id` = #{id }
			AND `type` = 'free'
	</select>
</mapper>