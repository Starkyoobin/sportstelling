<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sportstelling.sportsqna.dao.QnADAO">
	<!-- 게시물 등록 -->
	<insert id="insertQnA" parameterType="map">
		INSERT INTO `notice_board`
		(
			`type`
			, `userId`
			, `userNickName`
			, `subject`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		) VALUES (
			'qna'
			, #{userId }
			, #{userNickName }
			, #{subject }
			, #{imagePath }
			, #{content }
			, now()
			, now()
		)
	</insert>
	<!-- 게시물 리스트 -->
	<select id="selectQnAList" resultType="com.sportstelling.sportsqna.model.QnA">
		SELECT
			`id`
			, `type`
			, `userId`
			, `userNickName`
			, `subject`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`notice_board`
		WHERE
			`type` = 'qna'
		ORDER BY `id` DESC
	</select>
	<!-- 게시물 상세 -->
	<select id="selectQnAByQnAId" resultType="com.sportstelling.sportsqna.model.QnA">
		SELECT
			`id`
			, `type`
			, `userId`
			, `userNickName`
			, `subject`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`notice_board`
		WHERE
			`id` = #{id }
			AND `type` = 'qna'
	</select>
	<!-- 데이터 불러오기 -->
	<select id="selectQnAByIdUserId" resultType="com.sportstelling.sportsqna.model.QnA" parameterType="map">
		SELECT
			`id`
			, `type`
			, `userId`
			, `userNickName`
			, `subject`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`notice_board`
		WHERE
			`type` = 'qna'
			AND `id` = #{id }
			AND `userId` = #{userId }
	</select>
	<!-- 게시물 수정 -->
	<update id="updateQnA" parameterType="map">
		UPDATE
			`notice_board`
		SET
			`subject` = #{subject }
			, `content` = #{content }
		WHERE
			`type` = 'qna'
			AND `id` = #{id }
			AND `userId` = #{userId }
	</update>
	<!-- 게시물 삭제 -->
	<delete id="deleteQnA">
		DELETE
		FROM
			`notice_board`
		WHERE
			`type` = 'qna'
			AND `id` = #{id }
			AND `userId` = #{userId }
	</delete>
	<!-- 내 게시물만 보기 -->
	<select id="selectQnAByUserId" resultType="com.sportstelling.sportsqna.model.QnA">
		SELECT
			`id`
			, `type`
			, `userId`
			, `userNickName`
			, `subject`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`notice_board`
		WHERE
			`type` = 'qna'
			AND `userId` = #{userId }
	</select>
</mapper>